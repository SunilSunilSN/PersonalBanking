{
  "name": "persona-banking-frontend",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "Applications/base-application",
    "Applications/MicroApplications/*",
    "SharedServices"
  ],
  "scripts": {
    "start:all": "concurrently --kill-others --prefix \"[{name}]\" --prefix-colors \"bgBlue.bold,bgRed.bold,bgGreen.bold,bgYellow.bold\" -n \"BASE,LOGIN,PRELOGIN,ACCOUNT\" \"yarn workspace base-application start\" \"yarn workspace login-microapp start\" \"yarn workspace preLogin-microapp start\" \"yarn workspace account-microapp start\"",
    "start:dev": "cross-env ENV_FILE=dev yarn start:all",
    "start:sit": "cross-env ENV_FILE=sit yarn start:all",
    "build:all": "yarn workspace base-application build && yarn workspace login-microapp build && yarn workspace preLogin-microapp build && yarn workspace account-microapp build",
    "start": "node server.js",
    "build:base": "yarn workspace base-application build",
    "build:login": "yarn workspace login-microapp build"
  },
  "dependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@craco/craco": "^7.1.0",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-tooltip": "^1.2.6",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "add": "^2.0.6",
    "babel-loader": "9.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "dropdown-menu": "^0.1.1",
    "env-cmd": "^10.1.0",
    "framer-motion": "^12.15.0",
    "init": "^0.1.2",
    "lucide-react": "^0.511.0",
    "mini-css-extract-plugin": "^2.9.2",
    "npx": "^10.2.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.5.0",
    "react-scripts": "^5.0.1",
    "recharts": "^2.15.3",
    "shadcn-ui": "^0.9.5",
    "tailwind-merge": "^3.3.0",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^3.4.17",
    "tw-animate-css": "^1.3.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3"
  }
}
