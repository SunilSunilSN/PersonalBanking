{
  "name": "Backend",
  "private": true,
  "workspaces": [
    "AccountManagment",
    "API-Gateway",
    "UserManagment",
    "TransactionManagment"
  ],
  "scripts": {
    "start:acct_microservice": "cross-env NODE_ENV=dev npm run start --workspace=AccountManagment",
    "start:API_microservice": "cross-env NODE_ENV=dev npm run start --workspace=API-Gateway",
    "start:user_microservice": "cross-env NODE_ENV=dev npm run start --workspace=UserManagment",
    "start:transaction_microservice": "cross-env NODE_ENV=dev npm run start --workspace=TransactionManagment",
    "start:all": "concurrently -n \"AccountManagment,API-Gateway,UserManagment,TransactionManagment\" -c \"blue,green,magenta,yellow\" \"npm run start:acct_microservice\" \"npm run start:API_microservice\" \"npm run start:user_microservice\" \"npm run start:transaction_microservice\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.9"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.0"
  }
}
